extends layout.pug

block content
  main
    section.search-page
      if !Array.isArray(results)
        .search-page__wrapper
          h1 Поиск
          .search.search-page__form
            form(action='#' method='get')
              label
                input(type='text' name='search' placeholder='Что ищем?')
              button.search__button.button.button--transparent(type='submit') Найти
      else if (results.length)
        .search-page__wrapper
          h1 Поиск
          .search.search-page__form
            form(action='#' method='get')
              label
                input(type='text' name='search' placeholder='Что ищем?' value='Путешествия')
              button.search__button.button.button--transparent(type='submit') Найти
            if results.length
              each article in results
                .search__result
                  +formatTimeTag(article)(class=`search__date`)
                  a.search__link
                    | #{article.title}
      else
        .search-page__wrapper.search-page__wrapper--empty
          h1 Поиск
          .search.search-page__form
            form(action='#' method='get')
              label
                input(type='text' placeholder='Что ищем?' value='Путешествия' name='search')
              button.search__button.button.button--transparent(type='submit') Найти
          p.search-page__empty Ничего не нашлось
